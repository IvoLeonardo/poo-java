<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>vaiParaProdutoLista</from-outcome>
            <to-view-id>/ProdutoLista.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>vaiParaVendedorLista</from-outcome>
            <to-view-id>/VendedorLista.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>vaiParaVendaLista</from-outcome>
            <to-view-id>/VendaLista.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/ProdutoLista.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>voltarIndex</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/VendedorLista.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>voltarIndex</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/VendaLista.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>voltarIndex</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <description>Meu primeiro ManagedBean</description>
        <managed-bean-name>produtoFacade</managed-bean-name>
        <managed-bean-class>controller.ProdutoFacade</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>
